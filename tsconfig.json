{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"allowJs": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"outDir": "./dist/",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "es6",
		"skipLibCheck": true,
		"baseUrl": "./src",
		"resolveJsonModule": true,
		"paths": {
			"@Components": [
				"Components"
			],
			"@Interfaces": [
				"Interfaces"
			]
		}
	},
	"include": [
		"./src/**/*"
	]
}
